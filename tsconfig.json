{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "noEmitHelpers": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["./src/*.d.ts", "./src/**/*.d.ts", "./src/**/*.test.js"]
}
