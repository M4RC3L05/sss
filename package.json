{
  "name": "sss",
  "version": "0.0.0",
  "type": "module",
  "main": "./src/app.js",
  "exports": {
    ".": "./src/app.js",
    "./middlewares": "./src/middlewares/mod.js"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "editorconfig": true,
    "proseWrap": "preserve",
    "printWidth": 100,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "xo": {
    "env": [
      "node"
    ],
    "extensions": [
      ".ts"
    ],
    "prettier": true,
    "rules": {
      "func-names": "off",
      "@typescript-eslint/promise-function-async": "off"
    }
  },
  "scripts": {
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "transpile": "tsc",
    "lint-staged": "lint-staged",
    "version": "offline-github-changelog --next=${npm_new_version} | sed -e '/Release v.*/d;s/ (\\[.*\\]\\(.*\\))//gm' > CHANGELOG.md && git add CHANGELOG.md",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "offline-github-changelog": "^3.0.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "xo": "^0.56.0"
  },
  "dependencies": {
    "find-my-way": "^7.7.0"
  }
}
